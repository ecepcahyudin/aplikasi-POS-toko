@inherits LayoutComponentBase
@inject AppState AppState

<RadzenDialog/>
<RadzenNotification/>
<RadzenContextMenu/>
<RadzenTooltip/>

<div class="sidebar">
    <NavMenu />
</div>

<div class="main">
    <div class="top-row px-4" style="justify-content:flex-start;padding-left:1px">

        <RadzenLabel Text=@AppState.ComponentTitle Style="font-weight:bold;font-size:28px;margin-left:-14px">

        </RadzenLabel>

        @*<a href="https://docs.microsoft.com/aspnet/" target="_blank" style="visibility:hidden">About</a>*@
    </div>

    

    <div class="content px-4">
        @Body
    </div>
</div>

@code{
    protected override void OnInitialized()
    {
        AppState.OnChangeComponentTitle += StateHasChanged;
        

    }

    public void Dispose()
    {
        AppState.OnChangeComponentTitle -= StateHasChanged;
        
    }
}